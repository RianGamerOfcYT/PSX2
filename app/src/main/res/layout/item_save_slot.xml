<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Screenshot thumbnail -->
    <ImageView
        android:id="@+id/iv_slot_screenshot"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:padding="2dp"/>

    <!-- Save info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_slot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Slot 1"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_slot_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved 2024-01-15 3:45 PM"
            android:textSize="12sp"
            android:textColor="#888888"/>

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_slot_save"
            style="@style/PSX2.ElevatedTransparentButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Save"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:minWidth="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_slot_load"
            style="@style/PSX2.ElevatedTransparentButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Load"
            android:textSize="12sp"
            android:minWidth="60dp"/>

    </LinearLayout>

</LinearLayout>
